  <insert id="save" parameterType="com.xh.pojo.History">
    insert into history
    (readerName, bookName, bookType, historyTime)
    values (
          #{readerName},
          #{bookName},
          #{bookType},
          #{historyTime}
    );
  </insert>

  <!--查询所有数据-->
  <select id="findList" resultType="com.xh.pojo.History">
      select * from history order by historyId desc
